        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="layoutcolor">#fff</item>
        <item name="textcolor">#161F3D</item>
        <item name="backgroundcolor">#F2F3FA</item>
        <item name="selectedcolor">#0047ab</item>
        <item name="defaultcolor">#7F0047AB</item>
        <item name="headercolor">#0047ab</item>
        <item name="headertextcolor">#fff</item>
        <item name="message_sender">#fff</item>
        <item name="message_rec">#161F3D</item>
        <item name="like">#fff</item>
        <item name="search">#003d92</item>
