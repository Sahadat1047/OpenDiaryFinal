        <item name="headertextcolor">#fff</item>
        <item name="message_sender">#fff</item>
        <item name="message_rec">#fff</item>
        <item name="search">#000</item>
        <item name="following">#fff</item>

    </style>

    <!-- Auth theme. -->
    <style name="AuthTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">#fff</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">#fff</item> <!-- Whatever color you want-->
    </style>


</resources>
